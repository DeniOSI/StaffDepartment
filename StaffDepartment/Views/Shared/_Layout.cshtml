<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" type="text/css" rel="stylesheet" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <style>
        .hea{
            background-color: #81ce75;
        }
        body{
            background-color:#cae9d5;
        }
        .fnt{color: #440000;}
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top hea ">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="navbar-header ">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Система учета кадров", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>

                    <div class="navbar-collapse collapse fnt ">
                        <ul class="nav nav-tabs  fnt">
                            <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                            <li>@Html.ActionLink("Добавить работника", "Add", "AddUser")</li>
                            <li>@Html.ActionLink("О программе", "About", "Home")</li>
                            <li><br /><div class="col-lg-4 text-right">
   

</div></li>

                        </ul>
                    </div>
                </div>
                
            </div>
               
            </div>
        </div>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Дипломный проект</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
